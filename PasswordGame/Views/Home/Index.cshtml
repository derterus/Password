@{
    ViewData["Title"] = "Password Game by Bug Busters";
}

<div class="text-center">
    <h1 class="display-4">Придумай пароль!</h1>
    <br />
    <form>
        <div id="app">
            <input type="text" v-model="password" placeholder="Введите свой пароль сюда" v-on:keyup="checkedPassword()">

            <div v-for="rule in filterIndex">
                <span v-bind:class="{'text-success': rule.statusNow==true , 'text-danger': rule.statusNow==false }"> {{rule.text}}</span>
            </div>
            <div v-for="rule in filterRules">
                 <span v-bind:class="{'text-success': rule.statusNow==true , 'text-danger': rule.statusNow==false }"> {{rule.text}}</span>
            </div>
            <div>{{password}} </div>
            <div>Индекс {{index}}</div>
        </div>
    </form>
</div>
